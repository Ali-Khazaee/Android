            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityMain" android:screenOrientation="portrait" />
        <activity android:name=".activity.ActivityProfile" android:screenOrientation="portrait" />
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" android:screenOrientation="portrait" android:theme="@style/Base.Theme.AppCompat" />

        <meta-data android:name="com.google.android.geo.API_KEY" android:value="AIzaSyB-e78nDHYGAetSf7w2XKuaODt8-D-wuHE" />
