<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/RelativeLayoutBackGround"
                android:layout_width="match_parent"
                android:layout_height="@dimen/GeneralProfileBackGroundHeight"
                android:background="@color/BlueLight">

                <ImageView
                    android:id="@+id/ImageViewBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@null"
                    android:scaleType="fitXY" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.25"
                    android:background="@color/Black" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/activity_profile_edit_add"
                    android:alpha="0.5"
                    android:contentDescription="@null"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayoutProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="110dp">

                <co.biogram.main.misc.ImageViewCircle
                    android:id="@+id/ImageViewCircleProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/BlueLight"
                    app:IVC_BorderColor="@color/White"
                    app:IVC_BorderWidth="3dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.25"
                    android:background="@drawable/activity_profile_edit_profile" />

                <ImageView
                    android:id="@+id/ImageViewProfileAdd"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:alpha="0.5"
                    android:scaleType="fitCenter"
                    android:src="@drawable/activity_profile_edit_add"
                    android:contentDescription="@null"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/TextViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayoutProfile"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Gray3"
                android:textSize="16sp"
                android:text="@string/ActivityProfileEditName" />

            <EditText
                android:id="@+id/EditTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="32"
                android:inputType="textPersonName"
                android:textSize="19sp"
                android:hint="@string/ActivityProfileEditUsernameHint"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ._"
                android:layout_below="@+id/TextViewUsername"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/GeneralEditTextTheme" />

            <TextView
                android:id="@+id/TextViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Gray3"
                android:textSize="16sp"
                android:labelFor="@+id/EditTextDescription"
                android:text="@string/ActivityProfileEditDescription" />

            <EditText
                android:id="@+id/EditTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:maxLength="150"
                android:inputType="textLongMessage|textMultiLine"
                android:textSize="19sp"
                android:layout_below="@+id/TextViewDescription"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/GeneralEditTextTheme" />

            <TextView
                android:id="@+id/TextViewLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditTextDescription"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Gray3"
                android:textSize="16sp"
                android:labelFor="@+id/EditTextLink"
                android:text="@string/ActivityProfileEditWebsite" />

            <EditText
                android:id="@+id/EditTextLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="64"
                android:inputType="textUri"
                android:textSize="19sp"
                android:layout_below="@+id/TextViewLink"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/GeneralEditTextTheme" />

            <TextView
                android:id="@+id/TextViewLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditTextLink"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Gray3"
                android:textSize="16sp"
                android:labelFor="@+id/EditTextLink"
                android:text="@string/ActivityProfileEditLocation" />

            <EditText
                android:id="@+id/EditTextLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="textUri"
                android:textSize="19sp"
                android:layout_below="@+id/TextViewLocation"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/GeneralEditTextTheme" />

            <TextView
                android:id="@+id/TextViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditTextLocation"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/Gray3"
                android:textSize="16sp"
                android:text="@string/ActivityProfileEditEmail" />

            <EditText
                android:id="@+id/EditTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxLength="64"
                android:inputType="textEmailAddress"
                android:textSize="19sp"
                android:hint="@string/ActivityProfileEditEmailHint"
                android:layout_below="@+id/TextViewEmail"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:theme="@style/GeneralEditTextTheme" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/RelativeLayoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

    <co.biogram.main.misc.LoadingView
        android:id="@+id/LoadingBounceEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:LB_Color="@color/Black" />

    <TextView
        android:id="@+id/TextViewTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:textColor="@color/Black"
        android:text="@string/GeneralTryAgain" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/FrameLayoutMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
