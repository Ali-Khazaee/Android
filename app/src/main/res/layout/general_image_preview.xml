<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPagerMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:background="#09000000" />

    <ImageView
        android:id="@+id/ImageViewClose"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:src="@drawable/general_back"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent" />

    <co.biogram.main.ui.component.TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ActionBar"
        android:text="@string/SocialProfilePrivate"
        android:textSize="@dimen/FontMedium"
        android:textColor="?TextColor"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/ImageViewClose" />

</android.support.constraint.ConstraintLayout>
