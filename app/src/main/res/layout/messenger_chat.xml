<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="?BgColor">

    <ImageView
        android:id="@+id/ImageViewBack"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:layout_alignParentEnd="true"
        android:padding="14dp"
        android:src="@drawable/xxx_general_back_black" />

    <ImageView
        android:id="@+id/ImageViewOption"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:layout_toStartOf="@+id/ImageViewBack"
        android:padding="14dp"
        android:src="@drawable/xxx_messenger_option" />

    <co.biogram.main.ui.component.CircleImageView
        android:id="@+id/CircleImageViewProfile"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/z_social_activity_moment"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/Gray" />

    <TextView
        android:id="@+id/TextViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/CircleImageViewProfile"
        android:layout_toStartOf="@+id/ImageViewOption"
        android:layout_marginTop="8dp"
        android:textColor="?TextColor"
        android:textSize="@dimen/FontSmall" />

    <TextView
        android:id="@+id/TextViewSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewUsername"
        android:layout_toEndOf="@+id/CircleImageViewProfile"
        android:layout_toStartOf="@+id/ImageViewOption"
        android:textColor="@color/Gray"
        android:textSize="@dimen/FontMinimal" />

    <View
        android:id="@+id/ViewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?LineColor"
        android:layout_below="@+id/ImageViewBack" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutTool"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/LinearLayoutTool"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/ImageViewEmoji"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/xxx_messenger_chat_emoji"
                android:padding="6dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ImageViewFile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/xxx_messenger_chat_file"
                android:padding="6dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ImageViewVoice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/xxx_messenger_chat_voice"
                android:padding="6dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ImageViewImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/xxx_messenger_chat_image"
                android:padding="6dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ImageViewVideo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/xxx_messenger_chat_video"
                android:padding="6dp"
                android:layout_weight="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/EditTextMessage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ActionBar"
            android:hint="@string/ChatUIMessage"
            android:inputType="textMultiLine"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@+id/ImageViewSend"
            android:layout_below="@+id/LinearLayoutTool"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingBottom="5dp"
            android:textColor="?TextColor"
            android:textColorHint="@color/Gray"
            android:background="@null" />

        <ImageView
            android:id="@+id/ImageViewSend"
            android:layout_width="@dimen/ActionBar"
            android:layout_height="@dimen/ActionBar"
            android:layout_below="@+id/LinearLayoutTool"
            android:src="@drawable/xxx_messenger_chat_send_gray"
            android:layout_alignParentEnd="true"
            android:padding="14dp" />

    </RelativeLayout>

    <View
        android:id="@+id/ViewLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?LineColor"
        android:layout_above="@+id/RelativeLayoutTool" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ViewLine"
        android:layout_above="@+id/ViewLine2" />

</RelativeLayout>
