<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/ImageViewProfile"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:text="@string/ProfileUI"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontMedium" />

        <ImageView
            android:id="@+id/ImageViewSetting"
            android:layout_width="@dimen/ActionBar"
            android:layout_height="@dimen/ActionBar"
            android:layout_alignParentEnd="true"
            android:padding="12dp"
            android:src="@drawable/__profile_setting" />

        <ImageView
            android:id="@+id/ImageViewProfile"
            android:layout_width="@dimen/ActionBar"
            android:layout_height="@dimen/ActionBar"
            android:layout_toStartOf="@+id/ImageViewSetting"
            android:padding="12dp"
            android:src="@drawable/__profile_public" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:background="?LineColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleImageViewProfile"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/__profile_avatar"
                android:layout_margin="15dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/Gray" />

            <TextView
                android:id="@+id/TextViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/FontSmall"
                android:textStyle="bold"
                android:layout_marginTop="27dp"
                android:layout_toStartOf="@+id/LinearLayoutSaved"
                android:layout_toEndOf="@+id/CircleImageViewProfile" />

            <TextView
                android:id="@+id/TextViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/FontVerySmall"
                android:layout_below="@+id/TextViewName"
                android:layout_toEndOf="@+id/CircleImageViewProfile" />

            <LinearLayout
                android:id="@+id/LinearLayoutSaved"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:background="@drawable/__profile_saved_border">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/__profile_bookmark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/FontVerySmall"
                    android:textColor="?TextColor"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="@string/ProfileUISaved" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/CircleImageViewProfile"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewFollowing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:textStyle="bold"
                        android:text="@string/ProfileUIFollowing" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:textStyle="bold"
                        android:text="@string/ProfileUIFollower" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextViewProfileView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:textStyle="bold"
                        android:text="@string/ProfileUIProfileView" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/ViewLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ActionLine"
                android:layout_below="@id/LinearLayoutCount"
                android:layout_marginTop="10dp"
                android:background="?LineColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ViewLine"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/__profile_popular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontSmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/ProfileUIPopular" />

                    <TextView
                        android:id="@+id/TextViewPopular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textStyle="bold"
                        android:textColor="#ed6c9e"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/__profile_rating" />

                    <TextView
                        android:id="@+id/TextViewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontSmall"
                        android:textStyle="bold"
                        android:textColor="?TextColor"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontSmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:text="@string/ProfileUIRating" />

                    <TextView
                        android:id="@+id/TextViewRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontMinimal"
                        android:textColor="@color/Gray"
                        android:paddingTop="3dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontMinimal"
                        android:paddingTop="3dp"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUIRate" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:text="@string/ProfileUIPhoneNumber" />

                    <TextView
                        android:id="@+id/TextViewPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUINotSet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:id="@+id/TextViewEmailAddress"
                        android:text="@string/ProfileUIEmailAddress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUINotSet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:text="@string/ProfileUIAboutMe" />

                    <TextView
                        android:id="@+id/TextViewAboutMe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUINotSet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:text="@string/ProfileUIWebsite" />

                    <TextView
                        android:id="@+id/TextViewWebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUINotSet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:text="@string/ProfileUILocation" />

                    <TextView
                        android:id="@+id/TextViewLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="@color/Gray"
                        android:text="@string/ProfileUINotSet" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ActionLine"
                    android:background="?LineColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/FontVerySmall"
                        android:textColor="?TextColor"
                        android:textStyle="bold"
                        android:paddingBottom="5dp"
                        android:text="@string/ProfileUITag" />

                    <co.biogram.main.ui.view.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/TextViewTag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                        <TextView
                            android:id="@+id/TextViewTag7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="@dimen/FontMinimal"
                            android:background="@drawable/__profile_tag_border"
                            android:textColor="@color/Primary" />

                    </co.biogram.main.ui.view.FlowLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>