<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ActionBar"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:text="@string/ProfileUIAvatar"
        android:textStyle="bold"
        android:textSize="@dimen/FontVerySmall"
        android:gravity="center_vertical"
        android:textColor="?TextColor"
        android:layout_toStartOf="@+id/ImageViewClose" />

    <ImageView
        android:id="@+id/ImageViewClose"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:padding="10dp"
        android:src="@drawable/___general_close_blue"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/ViewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_below="@+id/ImageViewClose"
        android:background="?LineColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewLine"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewCamera"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ActionBar"
            android:text="@string/ProfileUIAvatarCamera"
            android:gravity="center_vertical"
            android:textColor="?TextColor"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ActionLine"
            android:background="?LineColor" />

        <TextView
            android:id="@+id/TextViewGallery"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ActionBar"
            android:text="@string/ProfileUIAvatarGallery"
            android:gravity="center_vertical"
            android:textColor="?TextColor"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ActionLine"
            android:background="?LineColor" />

        <TextView
            android:id="@+id/TextViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ActionBar"
            android:text="@string/ProfileUIAvatarDelete"
            android:gravity="center_vertical"
            android:textColor="?TextColor"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

    </LinearLayout>

</RelativeLayout>