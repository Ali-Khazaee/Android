<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/White"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RelativeLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ActionBarHeight"
            android:background="@color/BlueLight">

            <ImageView
                android:id="@+id/ImageViewBack"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="12dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_back_white" />

            <TextView
                android:id="@+id/TextViewHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ActivityWelcomeFragmentResetTitle"
                android:textColor="@color/White"
                android:layout_toEndOf="@+id/ImageViewBack"
                android:layout_toRightOf="@+id/ImageViewBack"
                android:textStyle="bold"
                android:textSize="@dimen/FontLarge" />

        </RelativeLayout>

        <View
            android:id="@+id/ViewBlankLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/RelativeLayoutHeader"
            android:background="@color/Gray2" />

        <TextView
            android:id="@+id/TextViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ViewBlankLine"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:gravity="center"
            android:textSize="@dimen/FontSmall"
            android:text="@string/ActivityWelcomeFragmentResetMessage" />

        <EditText
            android:id="@+id/EditTextEmailOrUsername"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/TextViewMessage"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/ActivityWelcomeFragmentResetEmailOrUsername"
            android:gravity="center"
            android:background="#4fcbd6dc"
            android:padding="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:theme="@style/GeneralEditTextTheme" />

        <Button
            android:id="@+id/ButtonSubmit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/EditTextEmailOrUsername"
            android:layout_margin="15dp"
            android:textAllCaps="false"
            android:textSize="@dimen/FontLarge"
            android:enabled="false"
            android:textColor="@color/White"
            android:background="@drawable/bg_button"
            android:text="@string/ActivityWelcomeFragmentResetSubmit"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <LinearLayout
            android:id="@+id/LinearLayoutLoading"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_margin="15dp"
            android:layout_below="@+id/EditTextEmailOrUsername"
            android:background="@drawable/bg_button">

            <co.biogram.main.misc.LoadingView
                android:id="@+id/LoadingViewReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:LB_Color="@color/White" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
