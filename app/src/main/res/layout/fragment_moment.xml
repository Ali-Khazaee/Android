<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/RelativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBarHeight"
        android:background="@color/White5">

        <TextView
            android:id="@+id/TextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/FragmentMomentTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ImageViewSearch"
            android:layout_toStartOf="@+id/ImageViewSearch"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="@dimen/FontLarge" />

        <ImageView
            android:id="@+id/ImageViewSearch"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:layout_toLeftOf="@+id/ImageViewBook"
            android:layout_toStartOf="@+id/ImageViewBook"
            android:src="@drawable/ic_search_blue" />

        <ImageView
            android:id="@+id/ImageViewBook"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:src="@drawable/ic_bookmark_blue" />

    </RelativeLayout>

    <View
        android:id="@+id/ViewBlankLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RelativeLayoutHeader"
        android:background="@color/Gray2" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/SwipeRefreshLayoutMoment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ViewBlankLine">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewMoment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/ImageViewWrite"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:background="@drawable/bg_write"
        android:contentDescription="@null"
        android:padding="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_write"
        android:layout_margin="20dp" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">

        <co.biogram.main.misc.LoadingView
            android:id="@+id/AnimationLoadingMoment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/TextViewTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/FontLarge"
            android:textColor="@color/Black"
            android:text="@string/GeneralTryAgain" />

    </RelativeLayout>

</RelativeLayout>
