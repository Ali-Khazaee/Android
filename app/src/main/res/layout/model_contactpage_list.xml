<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="66dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/modelcontactpage_circleimageview_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:src="@drawable/profile_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:layout_toEndOf="@id/modelcontactpage_circleimageview_profile"
        android:layout_toStartOf="@id/modelcontactpage_imageview_select"
        >
        <TextView
            android:id="@+id/modelcontactpage_textview_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Alireza"
            android:textStyle="bold"
            android:textSize="@dimen/FontMedium"/>
        <TextView
            android:id="@+id/modelcontactpage_textview_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Alireza"
            android:textSize="@dimen/FontSmall"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/modelcontactpage_imageview_select"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_follow_block"
        android:layout_margin="8dp"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        />

</RelativeLayout>