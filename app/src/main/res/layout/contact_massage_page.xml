<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:id="@+id/contactpage_relative_toolbar">

        <ImageView
            android:id="@+id/contactpage_imageview_search"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:padding="13dp"
            android:src="@drawable/xxx_messenger_search_black" />

        <EditText
            android:id="@+id/contactpage_edittext_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/contactpage_imageview_search"
            android:layout_toStartOf="@id/contactpage_imageview_remove"
            android:background="#00ffffff"
            android:hint="Search" />

        <ImageView
            android:id="@+id/contactpage_imageview_remove"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_remove_gray" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/contactpage_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactpage_relative_toolbar"
        android:layout_above="@id/contactpage_textview_sendmasseg">
    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/contactpage_textview_sendmasseg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_sendmassage_contactpage"
        android:gravity="center"
        android:text="Send Message"
        android:textColor="#fff"
        android:textSize="21sp" />

</RelativeLayout>