<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?BgColor"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:background="?BgColor"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ImageViewClose"
            android:layout_width="@dimen/ActionBar"
            android:layout_height="@dimen/ActionBar"
            android:padding="12dp"
            android:src="@drawable/xxx_general_back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SocialProfileSpecialCenterUI"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:background="?BgColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:text="@string/SocialProfileSpecialCenterUICredit"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall" />

        <TextView
            android:id="@+id/TextViewBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/SocialProfileSpecialCenterUIBadge"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall" />

        <TextView
            android:id="@+id/TextViewSpecialPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/SocialProfileSpecialCenterUISpecialPost"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?LineColor" />

    <FrameLayout
        android:id="@+id/FrameLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?BgColor" />

</LinearLayout>