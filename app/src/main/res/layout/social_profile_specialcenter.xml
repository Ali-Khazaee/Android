<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?GroundColor"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:background="?ActionBarColor"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ImageViewClose"
            android:layout_width="@dimen/ActionBar"
            android:layout_height="@dimen/ActionBar"
            android:src="@drawable/z_general_back_black"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/FontMedium"
            android:textColor="?TextColor"
            android:text="@string/SocialProfileSpecialCenterUI" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TabLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?ActionBarColor">

        <TextView
            android:id="@+id/TextViewCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:text="@string/SocialProfileSpecialCenterUICredit" />

        <TextView
            android:id="@+id/TextViewBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall"
            android:padding="10dp"
            android:text="@string/SocialProfileSpecialCenterUIBadge" />

        <TextView
            android:id="@+id/TextViewSpecialPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?TextColor"
            android:textSize="@dimen/FontVerySmall"
            android:padding="10dp"
            android:text="@string/SocialProfileSpecialCenterUISpecialPost" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?LineColor" />

    <FrameLayout
        android:id="@+id/FrameLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?GroundColor" />

</LinearLayout>