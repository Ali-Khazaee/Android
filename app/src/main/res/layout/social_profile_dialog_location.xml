<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ActionBar"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@+id/ImageViewClose"
        android:gravity="center_vertical"
        android:text="@string/SocialProfileUILocationTitle"
        android:textColor="?TextColor"
        android:textSize="@dimen/FontVerySmall"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageViewClose"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:layout_alignParentEnd="true"
        android:padding="9dp"
        android:src="@drawable/z_general_close_blue" />

    <View
        android:id="@+id/ViewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_below="@+id/ImageViewClose"
        android:background="?LineColor" />

    <TextView
        android:id="@+id/TextViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ViewLine"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:text="@string/SocialProfileUILocationMessage"
        android:textColor="@color/Gray"
        android:textSize="@dimen/FontVerySmall" />

    <EditText
        android:id="@+id/EditTextLocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:layout_below="@+id/TextViewMessage"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@+id/ImageViewSearch"
        android:hint="@string/SocialProfileUILocationHint"
        android:inputType="text"
        android:maxLength="32"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="?TextColor"
        android:textSize="@dimen/FontMedium" />

    <ImageView
        android:id="@+id/ImageViewSearch"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/TextViewMessage"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/_inbox_search" />

    <View
        android:id="@+id/ViewLine2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_below="@+id/EditTextLocation"
        android:background="?LineColor" />

    <ListView
        android:id="@+id/ListViewSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ViewLine2" />

</RelativeLayout>