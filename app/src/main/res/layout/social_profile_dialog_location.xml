<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ActionBar"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:text="@string/ProfileUILocationTitle"
        android:textStyle="bold"
        android:textSize="@dimen/FontVerySmall"
        android:gravity="center_vertical"
        android:textColor="?TextColor"
        android:layout_toStartOf="@+id/ImageViewClose" />

    <ImageView
        android:id="@+id/ImageViewClose"
        android:layout_width="@dimen/ActionBar"
        android:layout_height="@dimen/ActionBar"
        android:padding="10dp"
        android:src="@drawable/___general_close_blue"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/ViewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_below="@+id/ImageViewClose"
        android:background="?LineColor" />

    <EditText
        android:id="@+id/EditTextLocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:layout_below="@+id/ViewLine"
        android:layout_toLeftOf="@+id/ImageViewSearch"
        android:textSize="@dimen/FontMedium"
        android:textColor="?TextColor"
        android:hint="@string/ProfileUILocationHint"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:maxLines="1"
        android:inputType="text"
        android:maxLength="32" />

    <ImageView
        android:id="@+id/ImageViewSearch"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@+id/ViewLine"
        android:src="@drawable/_inbox_search"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true" />

    <View
        android:id="@+id/ViewLine2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_below="@+id/EditTextLocation"
        android:background="?LineColor" />

    <ListView
        android:id="@+id/ListViewSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ViewLine2" />

</RelativeLayout>
