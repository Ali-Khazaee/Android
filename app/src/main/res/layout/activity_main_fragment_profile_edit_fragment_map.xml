<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/RelativeLayoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBarHeight"
        android:background="@color/White5"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/ImageViewBack"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:src="@drawable/ic_back_blue" />

        <TextView
            android:id="@+id/TextViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Location"
            android:layout_toEndOf="@+id/ImageViewBack"
            android:layout_toRightOf="@+id/ImageViewBack"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/ImageViewSearch"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search_blue" />

    </RelativeLayout>

    <View
        android:id="@+id/ViewBlankLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RelativeLayoutHeader"
        android:background="@color/Gray2" />

    <View
        android:id="@+id/ViewBlankLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/RelativeLayoutBottom"
        android:background="@color/Gray2" />

    <RelativeLayout
        android:id="@+id/RelativeLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBarHeight"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ImageViewSend"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:padding="13dp"
            android:src="@drawable/ic_location_blue" />

        <TextView
            android:id="@+id/TextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/ImageViewSend"
            android:layout_toRightOf="@+id/ImageViewSend" />

        <TextView
            android:id="@+id/TextViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewName"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ImageViewSend"
            android:layout_toRightOf="@+id/ImageViewSend" />

    </RelativeLayout>

    <View
        android:id="@+id/ViewCenter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/ImageViewPin"
        android:layout_width="24dp"
        android:layout_height="42dp"
        android:contentDescription="@null"
        android:layout_above="@+id/ViewCenter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_location_pin" />

</RelativeLayout>
