<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?GroundColor">

    <LinearLayout
        android:id="@+id/LinearLayoutMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionBar"
        android:layout_alignParentBottom="true"
        android:background="?ActionBarColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageViewInbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp" />

        <ImageView
            android:id="@+id/ImageViewMoment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="17dp" />

        <ImageView
            android:id="@+id/ImageViewChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/z_social_activity_chat" />

        <ImageView
            android:id="@+id/ImageViewNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp" />

        <ImageView
            android:id="@+id/ImageViewProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp" />

    </LinearLayout>

    <View
        android:id="@+id/ViewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ActionLine"
        android:layout_above="@+id/LinearLayoutMenu"
        android:background="?LineColor" />

    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ViewLine" />

    <FrameLayout
        android:id="@+id/ContainerFull"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>